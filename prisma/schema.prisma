generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"

}

model Todo {
  id            Int             @id @default(autoincrement())     
  todos         String
  status        Boolean
  price         Int
  created_at    DateTime        @default(now())
  updated_at    DateTime        @updatedAt
}
